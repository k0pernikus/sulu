<h2>{{ property.name|capitalize }}</h2>
<div id="{{ property.name }}"
     data-type="array"
     data-type-min="{{ property.minOccurs }}"
     data-type-max="{{ property.maxOccurs }}"
     data-mapper-property="{{ property.name }}">

    {% for i in 1..property.minOccurs %}
        <div class="{{ property.name }}-element">
            {% include property.type.template with {'property': property|merge({'id': property.name ~ i})} only %}
        </div>
    {% endfor %}

</div>

{% if needsAddButton(property) %}
    <div class="mapper-add-{{ property.name }} pointer" data-mapper-add="{{ property.name }}">

        <span class="icon-add"></span> add {{ property.name }} (<span
                id="current-counter-{{ property.name }}">{{ property.minOccurs }}</span> von {{ property.maxOccurs }})
    </div>
{% endif %}

<hr class="divider"/>
