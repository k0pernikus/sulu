<form id="content-form" class="grid">

    <div class="grid-row">
        <label for="show-in-navigation">Show In Navigation</label>
        <input type="checkbox" id="show-in-navigation"/>
    </div>

    {% for property in template.properties %}

        {# set defaults for property#}
        {% set type = getType(property.contentTypeName) %}

        {% if property is multiple %}
            {% include 'SuluContentBundle:Template:macros/multiple.html.twig' with {'property': property, 'type': type} only %}
        {% else %}
            {% include 'SuluContentBundle:Template:macros/single.html.twig' with {'property': property, 'type': type, 'id': property.name} only %}
        {% endif %}
    {% endfor %}
</form>

<script type="text/javascript">
    (function() {
        App.emit('sulu.preview.set-params', '{{ wsUrl }}', '{{ wsPort }}');
        {% if fireEvent %}
        App.emit('sulu.content.contents.default-template', '{{ templateKey }}');
        {% endif %}
    })();
</script>
