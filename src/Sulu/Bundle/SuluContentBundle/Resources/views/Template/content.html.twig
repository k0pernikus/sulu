<form id="content-form" class="grid">
    {% for property in template.properties %}

        {# get Type for property #}
        {% set type = getType(property.contentTypeName) %}
        {# get params for property #}
        {% set params = getParams(property) %}

        {% if property.contentTypeName == 'block' %}
            {% include type.template with {'property': property, 'params': params, 'type': type, 'id': property.name, 'webspaceKey': webspaceKey, 'languageCode': languageCode} only %}
        {% elseif property is multiple %}
            {% include 'SuluContentBundle:Template:macros/multiple.html.twig' with {'property': property, 'params': params, 'type': type, 'id': property.name, 'webspaceKey': webspaceKey, 'languageCode': languageCode} only %}
        {% else %}
            {% include 'SuluContentBundle:Template:macros/single.html.twig' with {'property': property, 'params': params, 'type': type, 'id': property.name, 'webspaceKey': webspaceKey, 'languageCode': languageCode} only %}
        {% endif %}
    {% endfor %}
</form>

<script type="text/javascript">
    (function() {
        App.emit('sulu.preview.set-params', '{{ wsUrl }}', '{{ wsPort }}');
        {% if fireEvent %}
        App.emit('sulu.content.contents.default-template', '{{ templateKey }}');
        {% endif %}
    })();
</script>
