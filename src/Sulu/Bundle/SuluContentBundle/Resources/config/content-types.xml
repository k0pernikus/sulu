<?xml version="1.0" ?>

<types>
    <!-- simple content types -->
    <type name="textLine" phpcr-type="string"/>
    <type name="textArea" phpcr-type="string"/>
    <type name="richTextEditor" phpcr-type="string"/>

    <type name="image" phpcr-type="reference"/>
    <type name="document" phpcr-type="reference"/>

    <type name="internalLink" phpcr-type="reference"/>

    <!-- complex content types -->
    <type name="resourceLocator"/>
    <type name="smartContentSelection"/>

    <type name="imageSelection">
        <params>
            <param name="minImages" value="1"/>
            <param name="maxImages" value="10"/>
        </params>
        <properties>
            <property name="title" type="textLine"/>
            <property name="images" type="image" minOccurs="%minImages%" maxOccurs="%maxImages%"/>
        </properties>
    </type>

    <type name="documentSelection">
        <properties>
            <property name="title" type="textLine"/>
            <property name="documents" type="document" minOccurs="0" maxOccurs="10"/>
        </properties>
    </type>

    <type name="internalLinkSelection">
        <properties>
            <property name="title" type="textLine"/>
            <property name="internalLinks" type="internalLink" minOccurs="0" maxOccurs="1"/>
        </properties>
    </type>
</types>
