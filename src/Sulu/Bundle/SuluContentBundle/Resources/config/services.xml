<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sulu_content.admin.class">Sulu\Bundle\ContentBundle\Admin\SuluContentAdmin</parameter>
        <parameter key="sulu_content.twig_extension.class">Sulu\Bundle\ContentBundle\Twig\ContentExtension</parameter>
        <parameter key="sulu_content.admin.content_navigation.class">Sulu\Bundle\ContentBundle\Admin\SuluContentContentNavigation</parameter>
        <parameter key="sulu_content.preview.message_component.class">Sulu\Bundle\ContentBundle\Preview\PreviewMessageComponent</parameter>
        <parameter key="sulu_content.preview.class">Sulu\Bundle\ContentBundle\Preview\Preview</parameter>
        <parameter key="sulu_content.preview.lifetime">3600</parameter>
        <parameter key="sulu_content.preview.template-namespace">ClientWebsiteBundle:Website:</parameter>
        <parameter key="sulu_content.preview.cache.class">Doctrine\Common\Cache\FilesystemCache</parameter>
        <parameter key="sulu_content.node_repository.class">Sulu\Bundle\ContentBundle\Repository\NodeRepository</parameter>
        <parameter key="sulu_content.rl_repository.class">Sulu\Bundle\ContentBundle\Repository\ResourceLocatorRepository</parameter>
        <parameter key="sulu.content.type.smart_content.class">Sulu\Bundle\ContentBundle\Content\Types\SmartContent</parameter>
    </parameters>
    <services>
        <!-- admin class -->
        <service id="sulu_content.admin" class="%sulu_content.admin.class%">
            <tag name="sulu.admin"/>
            <argument type="service" id="sulu_core.webspace.webspace_manager"/>
            <argument>%sulu_admin.name%</argument>
            <argument type="service" id="service_container"/>
        </service>

        <!-- content-navigation -->
        <service id="sulu_content.admin.content_navigation" class="%sulu_content.admin.content_navigation.class%"/>
        <service id="sulu_content.twig_extension" class="%sulu_content.twig_extension.class%">
            <tag name="twig.extension"/>
            <argument type="service" id="sulu.content.type_manager"/>
        </service>

        <!-- preview -->
        <service id="sulu_content.preview.cache" class="%sulu_content.preview.cache.class%" public="false">
            <argument>%kernel.cache_dir%</argument>
        </service>
        <service id="sulu_content.preview" class="%sulu_content.preview.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="templating"/>
            <argument type="service" id="sulu_content.preview.cache"/>
            <argument type="service" id="sulu.content.mapper"/>
            <argument type="service" id="sulu.content.structure_manager"/>
            <argument type="service" id="controller_resolver"/>
            <argument>%sulu_content.preview.lifetime%</argument>
            <argument>%sulu_content.preview.template-namespace%</argument>
        </service>
        <service id="sulu_content.preview.message_component" class="%sulu_content.preview.message_component.class%">
            <argument type="service" id="sulu_content.preview"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- nodes -->
        <service id="sulu_content.node_repository" class="%sulu_content.node_repository.class%">
            <argument type="service" id="sulu.content.mapper"/>
            <argument type="service" id="sulu.phpcr.session"/>
            <argument type="service" id="sulu_security.user_manager"/>
            <argument type="service" id="sulu.content.type.resource_locator"/>
            <argument type="service" id="sulu_core.webspace.webspace_manager"/>
        </service>
        <service id="sulu.content.type.smart_content" class="%sulu.content.type.smart_content.class%">
            <argument type="service" id="sulu_content.node_repository"/>
            <argument type="service" id="sulu_tag.tag_manager"/>
            <argument>%sulu.content.type.smart_content.template%</argument>
        </service>

        <!-- resource locator -->
        <service id="sulu_content.rl_repository" class="%sulu_content.rl_repository.class%">
            <argument type="service" id="sulu.content.rlp.strategy.tree"/>
            <argument type="service" id="sulu.content.structure_manager"/>
        </service>
    </services>
</container>
