<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\SecurityBundle\Entity\User" repository-class="Sulu\Bundle\SecurityBundle\Entity\UserRepository" table="se_users">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="username" type="string" column="username" length="60"/>
        <field name="password" type="string" column="password" length="128"/>
        <field name="locale" type="string" column="locale" length="60"/>
        <field name="salt" type="string" column="salt" length="16"/>
        <field name="privateKey" type="string" column="privateKey" length="2000" nullable="true"/>

        <one-to-one field="contact" target-entity="Sulu\Bundle\ContactBundle\Entity\Contact">
            <join-column name="idContacts" referenced-column-name="id"/>
        </one-to-one>

        <one-to-many field="userRoles" target-entity="Sulu\Bundle\SecurityBundle\Entity\UserRole" mapped-by="user"/>
    </entity>
</doctrine-mapping>
