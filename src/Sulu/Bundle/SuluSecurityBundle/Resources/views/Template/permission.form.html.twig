<div class="grid-row">
    <h2 class="bold">Username &amp; password</h2>
</div>
<form id="permissions-form">
    <div class="grid-row">
        <div class="grid-col-6">
            <label for="username">Username</label>
            <input name="username" id="username" type="text" class="form-element" value="<%= user.username%>" data-validation-required="true" data-validation-min-length="3"/>
        </div>
        <div class="grid-col-6">
            <label for="email">Primary email address*
                <input name="email" id="email" type="text" class="form-element" disabled value="<%= email %>" />
            </label>
        </div>
    </div>

    <div class="grid-row m-top-20" id="password-component"></div>

    <hr class="divider"/>

    <div class="grid-row m-top-30">

        <div class="gridrow">
            <h2>Sulu permissions</h2>
        </div>
        <div class="gridrow" id="permissions-grid"></div>
    </div>
</form>
