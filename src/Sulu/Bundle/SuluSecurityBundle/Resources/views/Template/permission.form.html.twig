<form class="form-horizontal" id="permissions-form">
    <div class="grid-row">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="username"><%=translate('security.permission.username')%></label>
                <input name="username" id="username" type="text" class="form-element" value="<%= (!!user) ? user.username : '' %>" data-validation-required="true" data-validation-min-length="3"/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="email"><%=translate('security.permission.email')%></label>
                <input name="email" tabindex="-1" id="email" type="text" class="form-element" readonly value="<%= (!!email) ? email : '' %>"/>
            </div>
        </div>
    </div>

    <div class="grid-row" id="password-component"></div>

    <div class="grid-row">
        <div class="form-group grid-col-6">
            <label for="locale"><%=translate('security.permission.locale')%></label>
            <select name="locale" id="locale" class="form-element">
                <option value="de" <%=user.locale==='de'? 'selected="selected"':''%>><%=translate('Deutsch')%></option>
                <option value="en" <%=user.locale==='en'? 'selected="selected"':''%>><%=translate('English')%></option>
            </select>
        </div>
    </div>

    <hr class="divider"/>

    <div class="grid-row m-top-30">

        <div class="gridrow">
            <h2><%=translate('security.permission.titlePermissions')%></h2>
        </div>
        <div class="gridrow" id="permissions-grid"></div>

    </div>
</form>
