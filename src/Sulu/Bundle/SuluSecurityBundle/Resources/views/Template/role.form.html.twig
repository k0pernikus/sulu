<form class="form-horizontal" id="role-form">
    <% if(!!data.id) { %>
    <input id="id" type="hidden" value="<%= data.id %>"/>
    <% } %>
    <div class="grid-row">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="name" class="required"><%=translate('security.roles.name')%></label>
                <input class="form-element" type="text" id="name" value="<%= data.name %>"
                       data-validation-required="true"/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="system" class="required"><%=translate('security.roles.system')%></label>
                <div id="system"></div>
            </div>
        </div>
    </div>

    <div class="form-group grid-row">
        <span></span>
        <div>
            <input class="form-element custom-checkbox" type="checkbox" id="god" <% if(data.god)
            print('checked="checked"')
            %>/>
            <span class="custom-checkbox-icon"></span>
            <label for="god" class="inline clickable"><%=translate('security.roles.godModeDescription')%></label>
        </div>
    </div>

    <div class="grid-row">
        <h2 class="divider"><%=translate('security.roles.permissions')%></h2>
        <div id="matrix-container"></div>
    </div>
</form>
