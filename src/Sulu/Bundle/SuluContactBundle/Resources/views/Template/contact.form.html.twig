{% extends "SuluContactBundle:Template:base.form.html.twig" %}

{% block static %}

    <div class="grid-row small">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="form-of-address" class="required"><%=translate('contact.contacts.formOfAddress')%></label>
                <div id="form-of-address"
                     data-aura-component="select@husky"
                     data-aura-data="{{ form_of_address|json_encode() }}"
                     data-aura-default-label="<%=translate('contact.contacts.formOfAddress.select')%>"
                     data-aura-value-name="translation"
                     data-aura-multiple-select="false"
                     data-aura-instance-name="form-of-address"
                     data-type-label="translation"
                     data-mapper-property="formOfAddress"
                     data-type="husky-select"
                     data-form="true"
                     data-validation-required="true">
                </div>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="salutation" class="required"><%=translate('contact.contacts.salutation')%></label>
                <input class="form-element" type="text" id="salutation" data-trigger="focusout" data-mapper-property="salutation"/>
            </div>
        </div>
    </div>

    <div class="grid-row small">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="first-name" class="required"><%=translate('contact.contacts.firstName')%></label>
                <input class="form-element" type="text" id="first-name" data-validation-required="true"
                       data-validation-min-length="3" data-mapper-property="firstName" value=""/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="last-name" class="required"><%=translate('contact.contacts.lastName')%></label>
                <input class="form-element" type="text" id="last-name" data-trigger="focusout"
                       data-validation-required="true" data-validation-min-length="3" data-mapper-property="lastName"
                       value=""/>
            </div>
        </div>
    </div>
    <div class="grid-row small">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="title"><%=translate('contact.contacts.contactTitle')%></label>
                <input class="form-element" type="text" id="title" data-mapper-property="title" value=""/>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="position"><%=translate('contact.contacts.position')%></label>
                <input class="form-element" type="text" id="position" data-mapper-property="position" value=""/>
            </div>
        </div>
    </div>
    <div class="grid-row">
        <div class="grid-col-6">
            <div class="form-group">
                <label for="company-input"><%=translate('contact.contacts.company')%></label>

                <div id="company"></div>
            </div>
        </div>
        <div class="grid-col-6">
            <div class="form-group">
                <label for="disabled"><%=translate('public.deactivate')%></label>
                <div>
                    <div class="custom-checkbox">
                        <input class="form-element husky-validate" type="checkbox" id="disabled" data-mapper-property="disabled">
                        <span class="icon"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
