{% extends "SuluContactBundle:Template:base.form.html.twig" %}

{% block static %}
    <div class="grid-row">
        <div class="grid-col-2">
            <img class="avatar logo" src="http://placehold.it/500" alt=""/>
        </div>
        <div class="grid-col-10">
            <div class="grid-row">
                <div class="grid-col-6">
                    <label for="first-name" class="required"><%=translate('contact.contacts.firstName')%></label>
                    <input class="form-element input-large" type="text" id="first-name"data-validation-required="true" data-validation-min-length="3" data-mapper-property="firstName" value=""/>
                </div>
                <div class="grid-col-6">
                    <label for="last-name" class="required"><%=translate('contact.contacts.lastName')%></label>
                    <input class="form-element input-large" type="text" id="last-name" data-trigger="focusout" data-validation-required="true" data-validation-min-length="3" data-mapper-property="lastName" value=""/>
                </div>
            </div>
            <div class="grid-row">
                <div class="grid-col-2">
                    <label for="title"><%=translate('contact.contacts.contactTitle')%></label>
                    <input class="form-element" type="text" id="title" data-mapper-property="title" value=""/>
                </div>
                <div class="grid-col-5">
                    <label for="position"><%=translate('contact.contacts.position')%></label>
                    <input class="form-element" type="text" id="position" data-mapper-property="position" value=""/>
                </div>
                <div class="grid-col-5">
                    <label for="company-input"><%=translate('contact.contacts.company')%></label>
                    <div class="husky-auto-complete-wrapper">
                        <div id="company"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
