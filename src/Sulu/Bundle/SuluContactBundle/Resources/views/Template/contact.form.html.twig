        cursor: pointer;
    }

    .icon-add:after {
        content: "\E191";
        display: inline-block;
    }

    .icon-settings:after {
        content: "\E281";
        display: inline-block;
    }

    .control-label {
        padding-left: 5px;
        padding-right: 10px;
        cursor: pointer;
    }

    .text-right {
        text-align: right;
    }

