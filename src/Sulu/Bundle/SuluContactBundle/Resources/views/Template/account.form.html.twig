{% extends "SuluContactBundle:Template:base.form.html.twig" %}

{% block static %}

    <div class="form-horizontal">
        <div class="form-group grid-row small">
            <label for="name" class="required"><%=translate('contact.accounts.name')%></label>
            <div>
                <input class="form-element" type="text" id="name"
                       data-validation-required="true"
                       data-validation-min-length="3"
                       data-mapper-property="name"/>
            </div>
        </div>
        <div class="grid-row">
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="companyInput"><%=translate('contact.accounts.company')%></label>
                    <div id="company"></div>
                </div>

                <input type="hidden" id="accountType" data-mapper-property="type" />

            </div>
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="accountCategory"><%=translate('contact.accounts.cateogory')%></label>
                    <input class="form-element" type="text" id="accountCategory" data-mapper-property="category" />
                </div>
            </div>
        </div>

        <div class="grid-row">
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="deactivated"><%=translate('public.deactivate')%></label>
                    <div>
                        <div class="custom-checkbox">
                            <input class="form-element husky-validate" type="checkbox" id="deactivated">
                            <span class="icon"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
