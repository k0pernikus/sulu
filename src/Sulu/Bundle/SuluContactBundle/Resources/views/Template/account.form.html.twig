{% extends "SuluContactBundle:Template:base.form.html.twig" %}

{% block static %}

    <div class="form-horizontal">
        <div class="form-group grid-row">
            <label for="name" class="required"><%=translate('contact.accounts.name')%></label>
            <input class="form-element input-large" type="text" id="name"
                   data-validation-required="true"
                   data-validation-min-length="3"
                   data-mapper-property="name"/>
        </div>
        <div class="grid-row">
            <div class="form-group grid-col-7">
                <label for="url"><%=translate('contact.accounts.website')%></label>
                <input class="form-element" type="text" id="url" data-type="url"/>
            </div>
            <div class="form-group grid-col-5">
                <label for="companyInput"><%=translate('contact.accounts.company')%></label>

                <div id="company"></div>
            </div>
            <input type="hidden" id="accountType" data-mapper-property="type" />
        </div>
    </div>
{% endblock %}
