<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Sulu\Bundle\TranslateBundle\Entity\TranslationRepository" name="Sulu\Bundle\TranslateBundle\Entity\Translation" table="tr_translations">
    <field name="value" type="text" column="value"/>
    <many-to-one field="catalogue" target-entity="Sulu\Bundle\TranslateBundle\Entity\Catalogue" inversed-by="tr_catalogues">
      <join-columns>
        <join-column name="idCatalogues" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="code" target-entity="Sulu\Bundle\TranslateBundle\Entity\Code" inversed-by="tr_codes">
      <join-columns>
        <join-column name="idCodes" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
