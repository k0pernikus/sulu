<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sulu\Bundle\ContactBundle\Entity\AccountContact" table="co_account_contacts">
        <id name="account" association-key="true" />
        <id name="contact" association-key="true" />

        <field name="main" type="boolean" column="main" nullable="false" />
        <field name="position" type="string" column="position" nullable="true" />

        <many-to-one field="contact" target-entity="Contact" inversed-by="accountContacts">
            <join-columns>
                <join-column name="idContacts" referenced-column-name="id" nullable="false" on-delete="CASCADE"></join-column>
            </join-columns>
        </many-to-one>
        <many-to-one field="account" target-entity="Account" inversed-by="accountContacts">
            <join-columns>
                <join-column name="idAccounts" referenced-column-name="id" nullable="false" on-delete="CASCADE"></join-column>
            </join-columns>
        </many-to-one>
    </entity>
</doctrine-mapping>
