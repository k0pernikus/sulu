<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Sulu\Bundle\ContactBundle\Entity\Address" table="co_addresses">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="street" type="string" column="street" length="60"/>
    <field name="number" type="string" column="number" length="60"/>
    <field name="addition" type="string" column="addition" length="60" nullable="true"/>
    <field name="zip" type="string" column="zip" length="60"/>
    <field name="city" type="string" column="city" length="60"/>
    <field name="state" type="string" column="state" length="60"/>
    <many-to-one field="addressType" target-entity="Sulu\Bundle\ContactBundle\Entity\AddressType" inversed-by="addresses">
      <join-columns>
        <join-column name="idAdressTypes" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="country" target-entity="Sulu\Bundle\ContactBundle\Entity\Country" inversed-by="addresses">
      <join-columns>
        <join-column name="idCountries" referenced-column-name="id" nullable="false"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="contacts" target-entity="Sulu\Bundle\ContactBundle\Entity\Contact" mapped-by="addresses"/>
    <many-to-many field="accounts" target-entity="Sulu\Bundle\ContactBundle\Entity\Account" mapped-by="addresses"/>
  </entity>
</doctrine-mapping>
